                                <chart:SfCartesianChart.XAxes>
                                    <chart:CategoryAxis TickPosition="Inside" ShowMajorGridLines="False">
                                        <chart:CategoryAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:CategoryAxis.LabelStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.XAxes>
                                <chart:SfCartesianChart.YAxes>
                                    <chart:NumericalAxis Minimum="0" Maximum="70" Interval="20" TickPosition="Inside">
                                        <chart:NumericalAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:NumericalAxis.LabelStyle>
                                        <chart:NumericalAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeDashArray="2,4" Stroke="LightGray" StrokeWidth="1"/>
                                        </chart:NumericalAxis.MajorGridLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.YAxes>
                                <chart:SfCartesianChart.Series>
