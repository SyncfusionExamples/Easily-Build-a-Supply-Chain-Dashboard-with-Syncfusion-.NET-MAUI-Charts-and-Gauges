                                                    <Label Text="{Binding Kpis[4].Value, StringFormat='{}{0:N0}'}" FontSize="16" FontAttributes="Bold" TextColor="LightGrey"/>
                                                </Grid>
                                            </gauge:GaugeAnnotation.Content>
                                        </gauge:GaugeAnnotation>
                                    </gauge:RadialAxis.Annotations>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </Grid>
                </Border>
            </Grid>

            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Border Background="{StaticResource Panel}" Stroke="{StaticResource PanelStroke}" StrokeThickness="2" Padding="8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,*">
                            <Label Text="Inventory Value Over Time" FontAttributes="Bold"/>
                            <chart:SfCartesianChart Grid.Row="1" HeightRequest="220">
                                <chart:SfCartesianChart.Legend>
                                    <chart:ChartLegend ToggleSeriesVisibility="True" Placement="Top">
                                        <chart:ChartLegend.LabelStyle>
                                            <chart:ChartLegendLabelStyle TextColor="LightGray"/>
                                        </chart:ChartLegend.LabelStyle>
                                    </chart:ChartLegend>
                                </chart:SfCartesianChart.Legend>
                                <chart:SfCartesianChart.XAxes>
                                    <chart:CategoryAxis TickPosition="Inside" ShowMajorGridLines="False">
                                        <chart:CategoryAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:CategoryAxis.LabelStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.XAxes>
                                <chart:SfCartesianChart.YAxes>
                                    <chart:NumericalAxis Minimum="0" Maximum="100" Interval="50" TickPosition="Inside">
                                        <chart:NumericalAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:NumericalAxis.LabelStyle>
                                        <chart:NumericalAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeDashArray="2,4" Stroke="LightGray" StrokeWidth="1"/>
                                        </chart:NumericalAxis.MajorGridLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.YAxes>
                                <chart:SfCartesianChart.Series>
                                    <chart:ColumnSeries ItemsSource="{Binding InventoryValueOverTime}" XBindingPath="Month" YBindingPath="Value" EnableTooltip="True" Fill="#2fcf75" Label="Inventory Value"/>
                                    <chart:SplineSeries ItemsSource="{Binding InventoryValueOverTime}" XBindingPath="Month" YBindingPath="Change" EnableTooltip="True" Fill="LightGrey" StrokeWidth="3" Label="Change"/>
                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>
                        </Grid>
                    </Border>

                    <Border Background="{StaticResource Panel}" Stroke="{StaticResource PanelStroke}" StrokeThickness="2" Padding="8">
