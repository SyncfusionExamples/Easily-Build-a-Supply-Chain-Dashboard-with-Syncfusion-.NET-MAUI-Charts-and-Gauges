                                    <chart:ColumnSeries ItemsSource="{Binding InventoryToSales}" XBindingPath="Month" YBindingPath="Value" EnableTooltip="True" Fill="#2fcf75" Label="Inventory Value"/>
                                    <chart:ColumnSeries ItemsSource="{Binding InventoryToSales}" XBindingPath="Month" YBindingPath="Secondary" EnableTooltip="True" Fill="#ffcf66" Label="Sales Amount"/>
                                    <chart:SplineSeries ItemsSource="{Binding InventoryToSales}" XBindingPath="Month" YBindingPath="Ratio" YAxisName="RatioAxis" EnableTooltip="True" Fill="#2162af" StrokeWidth="3" Label="Ratio"/>
                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>
                        </Grid>
                    </Border>

                    <Border Background="{StaticResource Panel}" Stroke="{StaticResource PanelStroke}" StrokeThickness="2" Padding="8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,*,Auto">
                            <Label Text="Top 10 Items Based on Value" FontAttributes="Bold"/>
                            <chart:SfCartesianChart Grid.Row="1" IsTransposed="True" HeightRequest="360">
                                <chart:SfCartesianChart.YAxes>
                                    <chart:NumericalAxis TickPosition="Inside" ShowMajorGridLines="False" ShowMinorGridLines="False">
                                        <chart:NumericalAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:NumericalAxis.LabelStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.YAxes>
                                <chart:SfCartesianChart.XAxes>
                                    <chart:CategoryAxis ShowMajorGridLines="False" TickPosition="Inside">
                                        <chart:CategoryAxis.LabelStyle>
                                            <chart:ChartAxisLabelStyle TextColor="LightGray"/>
                                        </chart:CategoryAxis.LabelStyle>
                                        <chart:CategoryAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeDashArray="2,4" Stroke="LightGray" StrokeWidth="1"/>
                                        </chart:CategoryAxis.MajorGridLineStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.XAxes>
                                <chart:SfCartesianChart.Series>
                                    <chart:ColumnSeries ItemsSource="{Binding TopItems}" XBindingPath="Name" Spacing="0" YBindingPath="{Binding TopItemsMetricPath}" Width="0.7" EnableTooltip="True" Fill="#2fcf75"/>
                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>

                            <!-- Toggle buttons -->
                            <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center">
                                <Button Text="Value" Command="{Binding SetTopItemsMetricCommand}" CommandParameter="Value" WidthRequest="100">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="BackgroundColor" Value="#1f2937"/>
                                            <Setter Property="TextColor" Value="#e5e7eb"/>
                                            <Setter Property="CornerRadius" Value="20"/>
                                            <Style.Triggers>
                                                <DataTrigger TargetType="Button" Binding="{Binding TopItemsMetricPath}" Value="Amount">
                                                    <Setter Property="BackgroundColor" Value="#2fcf75"/>
                                                    <Setter Property="TextColor" Value="Black"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Text="Quantity" Command="{Binding SetTopItemsMetricCommand}" CommandParameter="Quantity" WidthRequest="100">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="BackgroundColor" Value="#1f2937"/>
                                            <Setter Property="TextColor" Value="#e5e7eb"/>
                                            <Setter Property="CornerRadius" Value="20"/>
                                            <Style.Triggers>
                                                <DataTrigger TargetType="Button" Binding="{Binding TopItemsMetricPath}" Value="Quantity">
                                                    <Setter Property="BackgroundColor" Value="#2fcf75"/>
                                                    <Setter Property="TextColor" Value="Black"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>