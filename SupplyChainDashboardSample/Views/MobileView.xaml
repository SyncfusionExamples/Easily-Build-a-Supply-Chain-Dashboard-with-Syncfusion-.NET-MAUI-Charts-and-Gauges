                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource Panel}" Stroke="{StaticResource PanelStroke}" StrokeThickness="2" Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,Auto">
                        <Label Text="TURNOVER RATIO" HorizontalTextAlignment="Center" FontSize="14" TextColor="#9ca3af"/>
                        <gauge:SfRadialGauge Grid.Row="1" HeightRequest="140" BackgroundColor="Transparent">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis Minimum="0" Maximum="12" StartAngle="180" EndAngle="0" ShowLabels="False" ShowTicks="False">
                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="0" EndValue="8" Fill="#d4a0e8" StartWidth="16" EndWidth="16"/>
                                        <gauge:RadialRange StartValue="8" EndValue="12" Fill="#f3f2f1" StartWidth="16" EndWidth="16"/>
                                    </gauge:RadialAxis.Ranges>
                                    <gauge:RadialAxis.Annotations>
                                        <gauge:GaugeAnnotation PositionFactor="0.0" DirectionUnit="Angle" DirectionValue="0">
                                            <gauge:GaugeAnnotation.Content>
                                                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Label Text="{Binding Kpis[2].Value, StringFormat='{}{0:0.00}'}" FontSize="16" FontAttributes="Bold" TextColor="LightGrey"/>
                                                </Grid>
                                            </gauge:GaugeAnnotation.Content>
                                        </gauge:GaugeAnnotation>
                                    </gauge:RadialAxis.Annotations>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource Panel}" Stroke="{StaticResource PanelStroke}" StrokeThickness="2" Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,Auto">
                        <Label Text="INVENTORY TO SALES RATIO" HorizontalTextAlignment="Center" FontSize="14" TextColor="#9ca3af"/>
                        <gauge:SfRadialGauge Grid.Row="1" HeightRequest="120" BackgroundColor="Transparent">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis Minimum="0" Maximum="1" StartAngle="180" EndAngle="0" ShowLabels="False" ShowTicks="False">
                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="0" EndValue="0.33" Fill="#2772bc" StartWidth="16" EndWidth="16"/>
                                        <gauge:RadialRange StartValue="0.33" EndValue="1" Fill="#f3f2f1" StartWidth="16" EndWidth="16"/>
                                    </gauge:RadialAxis.Ranges>
                                    <gauge:RadialAxis.Annotations>
                                        <gauge:GaugeAnnotation PositionFactor="0.0" DirectionUnit="Angle" DirectionValue="0">
                                            <gauge:GaugeAnnotation.Content>
                                                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Label Text="{Binding Kpis[3].Value, StringFormat='{}{0:0.00}'}" FontSize="16" FontAttributes="Bold" TextColor="LightGrey"/>
                                                </Grid>
                                            </gauge:GaugeAnnotation.Content>
                                        </gauge:GaugeAnnotation>
                                    </gauge:RadialAxis.Annotations>
                                </gauge:RadialAxis>
                            </gauge:SfRadialGauge.Axes>
                        </gauge:SfRadialGauge>
                    </Grid>
                </Border>

