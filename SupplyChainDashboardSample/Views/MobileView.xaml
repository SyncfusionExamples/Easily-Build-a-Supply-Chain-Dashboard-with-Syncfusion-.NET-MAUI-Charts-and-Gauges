                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,Auto">
                        <Label Text="AVG. INVENTORY DAYS OF SUPPLY" HorizontalTextAlignment="Center" FontSize="14" TextColor="#9ca3af"/>
                        <gauge:SfRadialGauge Grid.Row="1" HeightRequest="120" BackgroundColor="Transparent">
                            <gauge:SfRadialGauge.Axes>
                                <gauge:RadialAxis Minimum="0" Maximum="60" StartAngle="180" EndAngle="0" ShowLabels="False" ShowTicks="False">
                                    <gauge:RadialAxis.Ranges>
                                        <gauge:RadialRange StartValue="0" EndValue="20" Fill="#ffcf66" StartWidth="16" EndWidth="16"/>
                                        <gauge:RadialRange StartValue="20" EndValue="60" Fill="#f3f2f1" StartWidth="16" EndWidth="16"/>
                                    </gauge:RadialAxis.Ranges>
                                    <gauge:RadialAxis.Annotations>
                                        <gauge:GaugeAnnotation PositionFactor="0.0" DirectionUnit="Angle" DirectionValue="0">
